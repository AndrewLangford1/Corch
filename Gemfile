# define our source to loook for gems
source "http://rubygems.org/"
# declare the sinatra framework dependency
gem "sinatra" 
#cross origin for nagular requests
gem "sinatra-cross_origin"
#using rest client to make rest calls
gem 'rest-client'
#using json to reveive/return client requests
gem 'json_pure'
#using thin instead of webrick for the web server.
gem 'thin'
#using rack to run application
gem 'rack'
#using rake to build run tasks
gem 'rake'
#using nokogiri to build xml configs for jenkins
gem 'nokogiri'
# setup our test group and require rspec
group :test do
	gem "rspec"
end
# require a relative gem version
gem "i18n", "~> 0.4.1"